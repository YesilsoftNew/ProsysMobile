<?xml version="1.0" encoding="utf-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="ProsysMobile.CustomControls.OrderListItems.OrderItemSecondary"
      xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
      xmlns:controlbuttons="clr-namespace:ProsysMobile.CustomControls.Button"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand"
      ColumnSpacing="22">
    
      <Grid.ColumnDefinitions>
            <ColumnDefinition Width="AUTO"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="AUTO"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      
      <yummy:PancakeView 
            Grid.Row="0"
            Grid.Column="0"
            Border="{yummy:BorderMarkup Color={DynamicResource Color6}, Thickness=1 }"
            CornerRadius="16"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="Start">
                            
            <Image
                  x:Name="ItemImage"
                  WidthRequest="100"
                  HeightRequest="100"
                  Source="http://yas.yesilsoft.net/Images/Spices.png"
                  HorizontalOptions="Start"
                  VerticalOptions="FillAndExpand" />
                            
      </yummy:PancakeView>
      
      <Grid
            Grid.Row="0"
            Grid.Column="1"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            RowSpacing="3">
            
            <Grid.RowDefinitions>
                  <RowDefinition Height="AUTO"></RowDefinition>
                  <RowDefinition Height="AUTO"></RowDefinition>
                  <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Label
                  x:Name="ItemName"
                  Grid.Row="0"
                  Text="-"
                  Style="{DynamicResource Header3}"
                  HorizontalOptions="StartAndExpand"
                  VerticalOptions="FillAndExpand"/>
            
            <Label
                  x:Name="ItemPieces"
                  Grid.Row="1"
                  Text="-"
                  Style="{DynamicResource Label2}"
                  HorizontalOptions="StartAndExpand"
                  VerticalOptions="FillAndExpand"/>
            
            <Label
                  x:Name="ItemPrice"
                  Grid.Row="2"
                  Text="-"
                  Style="{DynamicResource Header4}"
                  HorizontalOptions="Start"
                  VerticalOptions="EndAndExpand"/>
            
      </Grid>
      
      <controlbuttons:CustomStandardImageButton 
            Grid.Column="2" 
            Grid.Row="0" 
            x:Name="ItemImageButton"
            Source="AddBasket"
            Style="{DynamicResource ImageButton2}" />
      
</Grid>