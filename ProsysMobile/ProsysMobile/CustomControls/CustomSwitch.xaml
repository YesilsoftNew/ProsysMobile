<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="ProsysMobile.CustomControls.CustomSwitch"
      VerticalOptions="FillAndExpand"
      HorizontalOptions="FillAndExpand">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
    </Grid.ColumnDefinitions>

    <Switch Grid.Column="0" x:Name="ItemSwitch"
        ThumbColor="Gray"
        OnColor="{DynamicResource Primary.Base}"
        VerticalOptions="CenterAndExpand"
        Toggled="ItemSwitch_Toggled"/>

    <Label Grid.Column="1" x:Name="ItemLabel" Style="{DynamicResource Partials.TextFields.TextTabel4}"/>

</Grid>