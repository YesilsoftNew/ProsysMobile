<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="WiseMobile.Themes.Partials.Backdrop"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:backdrop="clr-namespace:WiseMobile.Models">

    <Style x:Key="Partials.Backdrop.Backdrop" TargetType="backdrop:CustomBackdrop">
        <Setter Property="BorderColor" Value="{DynamicResource TransparentColor}" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="CornerRadius" Value="-1" />
        <Setter Property="IndicatorColor" Value="{DynamicResource Sky.Base}" />
        <Setter Property="RoundedCorners" Value="topleft,topright" />
        <Setter Property="ShadowColor" Value="{DynamicResource TransparentColor}" />
        <Setter Property="HasKeyboardOffset" Value="False" />
        <Setter Property="ShadowOpacity" Value="0" />
    </Style>

    <Style x:Key="Partials.Backdrop.MainGrid" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{DynamicResource Sky.White}" />
        <Setter Property="VerticalOptions" Value="EndAndExpand" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Padding" Value="0,0,0,60" />
        <Setter Property="RowSpacing" Value="0" />
    </Style>

</ResourceDictionary>